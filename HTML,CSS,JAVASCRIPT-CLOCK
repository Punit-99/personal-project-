            </div>
        </div>
        <!-- 24 hour-button -->
        <div class="dropdown">
            <button class="dropbtn-2" onclick="clock_24();">24-hour-format</button>
        </div>
        <!-- 12 hour-button -->
        <div class="dropdown">
            <button class="dropbtn" onclick="clock_12();">12-hour-format</button>
